page {
  padding-bottom: 90rpx;
}
.revice_address {
  margin-bottom: 10rpx;
}
.revice_address button {
  padding: 20rpx;
  margin-top: 10rpx;
}
.revice_address .addressInfo {
  padding: 20rpx;
  display: flex;
}
.revice_address .addressInfo .userInfo {
  flex: 2;
}
.revice_address .addressInfo .userPhone {
  flex: 1;
  text-align: right;
}
.cart_content {
  text-align: center;
}
.cart_content .cart_title {
  color: var(--themeColor);
  font-size: 30rpx;
  font-weight: 700;
  padding: 10rpx;
  border-top: 1px solid currentColor;
  border-bottom: 1px solid currentColor;
}
.cart_content .cart_main {
  border-bottom: 1px solid #ccc;
  padding: 10rpx;
  display: flex;
}
.cart_content .cart_main .cart_ck_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main navigator {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main navigator image {
  width: 80%;
}
.cart_content .cart_main .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_content .cart_main .cart_info_wrap .goods_params {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_info_wrap .goods_params .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.cart_content .cart_main .cart_info_wrap .goods_params .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_info_wrap .goods_params .cart_num_tool .num_edit {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
  height: 55rpx;
  width: 55rpx;
}
.cart_content .cart_main .cart_info_wrap .goods_params .cart_num_tool .goods_num {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 55rpx;
  width: 55rpx;
}
.cart_content image {
  width: 50%;
}
.footer_tools {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 90rpx;
  width: 100%;
}
.footer_tools .ck_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tools .cart_total_price {
  flex: 5;
  text-align: right;
  padding-right: 10rpx;
}
.footer_tools .cart_total_price .total_price_text {
  color: var(--themeColor);
  font-size: 32rpx;
}
.footer_tools .sum {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
}
